#include <DHT.h>

// Definir el tipo de sensor y el pin al que estaÌ conectado
#define DHTPIN 14        // Pin del sensor DHT11
#define DHTTYPE DHT11    // Tipo de sensor (DHT11)
#define LEDPIN 5         // Pin donde estaÌ conectado el LED

// Crear el objeto de la libreriÌa DHT
DHT dht(DHTPIN, DHTTYPE);

unsigned long lastReadTime = 0; // Variable para el tiempo de la uÌltima lectura
const unsigned long intervaloLectura = 2000; // Intervalo de lectura en ms

void setup() {
  Serial.begin(115200);
  dht.begin();
  pinMode(LEDPIN, OUTPUT); // Configurar el LED como salida
  digitalWrite(LEDPIN, LOW); // Apagar el LED al inicio
  Serial.println("Leyendo datos del sensor DHT11...");
}

void loop() {
  if (millis() - lastReadTime >= intervaloLectura) {
    lastReadTime = millis(); // Actualizar el tiempo de la uÌltima lectura

    // Leer humedad y temperatura
    float humedad = dht.readHumidity();
    float temperatura = dht.readTemperature();

    // Verificar si la lectura falloÌ
    if (isnan(humedad) || isnan(temperatura)) {
      Serial.println("Error al leer del sensor DHT11, reintentando...");
      return;
    }

    // Mostrar datos en monitor serial
//    Serial.print("Humedad: ");
    Serial.print(humedad);
    Serial.print("\t");
//    Serial.print("Temperatura: ");
    Serial.println(temperatura);
//    Serial.println(" Â°C");

    // Encender el LED si la temperatura es mayor o igual a 30Â°C
    if (temperatura >= 30) {
      digitalWrite(LEDPIN, HIGH);
//      Serial.println("ðŸ”¥ Temperatura alta, LED encendido!");
    } else {
      digitalWrite(LEDPIN, LOW);
//      Serial.println("âœ… Temperatura normal, LED apagado.");
    }
  }
}
